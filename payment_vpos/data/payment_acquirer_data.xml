<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="payment_acquirer_bancard" model="payment.acquirer">
            <field name="name">vPOS by Bancard</field>
            <field name="provider">vpos</field>
            <field name="display_as">Credit Card (powered by Bancard)</field>
            <field name="sequence">2</field>
            <field name="image_128" type="base64" file="payment_vpos/static/src/img/bancard_icon.png"/>
            <field name="description" type="html">
                <p>
                    Bancard Payment Services (vPOS) supports a wide range of payment methods: 
                    credit cards, debit cards, bank transfers, Bancontact, iDeal, Giropay.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Subscriptions</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Save Cards</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Embedded Credit Card Form</li>
                </ul>
            </field>
            <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_ideal"),
                                                            ref("payment.payment_icon_cc_bancontact"),
                                                            ref("payment.payment_icon_cc_maestro"),
                                                            ref("payment.payment_icon_cc_mastercard"),
                                                            ref("payment.payment_icon_cc_visa")])]'/>
            <field name="pre_msg" type="html">
                <p>Mensaje de ayuda al cliente para empezar a operar, hay que editar esto.</p>
            </field>
            <field name="auth_msg" type="html">
                <p>Your payment has been authorized.</p>
            </field>
            <field name="pending_msg" type="html">
                <p>Your payment has been successfully processed but is waiting for approval.</p>
            </field>
            <field name="done_msg" type="html">
                <p>Your payment has been successfully processed. Thank you!</p>
            </field>
            <field name="cancel_msg" type="html">
                <p>Your payment has been cancelled.</p>
            </field>
            <field name="module_id" ref="base.module_payment_vpos"/>
            <field name="view_template_id" ref="vpos_s2s_form"/>
        </record>
    </data>
</odoo>
